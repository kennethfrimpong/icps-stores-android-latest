<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f9f9f9">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/off_white"
        app:cardElevation="0dp">
        <!--
        app:cardCornerRadius="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        -->


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2f2f2">
            <ImageView
                android:id="@+id/staff_icon"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/outline_perm_identity_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="5dp"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/staff_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff Name"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintStart_toEndOf="@id/staff_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/staff_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff Type"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@id/staff_name"
                app:layout_constraintStart_toEndOf="@id/staff_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="#49454f"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/staff_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff Department"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#49454f"
                android:textSize="13sp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>