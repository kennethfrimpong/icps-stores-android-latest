<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:src="@drawable/drag_handle"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Login with Access ID"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textColor="#505050"
        android:layout_marginTop="10dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/nfcanimation"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        app:lottie_rawRes="@raw/nfc"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <ImageView
        android:id="@+id/access_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/scan1"
        android:layout_gravity="center"
        android:padding="40dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/nfc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please tap your access \n
card to the back of device"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginBottom="50dp"
        />

</LinearLayout>